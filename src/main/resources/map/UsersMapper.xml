<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mwj.mapper.UsersMapper" >
  <resultMap id="BaseResultMap" type="com.mwj.model.Users" >
    <id column="ID" property="id" jdbcType="DECIMAL" />
    <result column="NAME_" property="name" jdbcType="VARCHAR" />
    <result column="USERNAME" property="username" jdbcType="VARCHAR" />
    <result column="PASSWORD" property="password" jdbcType="VARCHAR" />
  </resultMap>

  <select id="login" resultType="java.lang.Integer" parameterType="com.mwj.model.Users" >
    select count(1) from USERS where  USERNAME = #{username} AND PASSWORD = #{password}

  </select>

</mapper>